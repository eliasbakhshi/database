<%- include("../header", {title: title}); %>

<a href="/eshop/product/create" class="btn btn-primary btn-sm my-4" style="max-width: 150px;">Create product</a>

<h1 class="my-3">Products list</h1>

<table class="table my-4 shadow-sm p-3 bg-white rounded table-hover rounded-3 overflow-hidden">
    <thead class="thead-light table-info">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        <% for (const row of res) { %>
        <tr>
            <td><%= row.product_name %></td>
            <td><%= row.description %></td>
            <td class=""><%= row.price %></td>
            <td class=""><%= row.stock %></td>
            <td class="text-center">
                <a href="/eshop/product/edit/<%= row.product_id %>">
                    <i class="fa fa-pencil-square-o me-3" aria-hidden="true"></i>
                </a>
                <a href="/eshop/product/delete/<%= row.product_id %>">
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
        <% }; %>
    </tbody>
</table>

<%- include("../footer"); %>
